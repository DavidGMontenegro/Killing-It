        <Image Source="/Images/golden frame.png"  Width="142" Height="48" Stretch="Fill" Canvas.Left="10" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="7"/>
        <ProgressBar Name="liveProgressBar" Height="30" Width="214" Canvas.Left="657" Canvas.Top="7" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Wheat" Foreground="#3a260e" Minimum="0" Maximum="100" Value="100"/>
        <Image Tag="box" Source="/Images/box2.jpg" Height="70" Width="70" Canvas.Left="587" Canvas.Top="85" HorizontalAlignment="Left" VerticalAlignment="Center" />
        <Image Tag="box" Source="/Images/box2.jpg" Height="70" Width="70" Canvas.Left="10" Canvas.Top="399" HorizontalAlignment="Left" VerticalAlignment="Center" />

    </Canvas>

